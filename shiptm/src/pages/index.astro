---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import ActivityImage from '../assets/blog-placeholder-2.jpg';
import HeroImage1 from '../assets/blog-placeholder-1.jpg';
import HeroImage2 from '../assets/blog-placeholder-2.jpg';
import HeroImage3 from '../assets/blog-placeholder-3.jpg';
import HeroImage4 from '../assets/blog-placeholder-4.jpg';
import HeroImage5 from '../assets/blog-placeholder-5.jpg';
import HeroImageAbout from '../assets/blog-placeholder-about.jpg';

const activities = [
	{ tag: 'Learning', title: 'Weekly Meetings' },
	{ tag: 'Learning', title: 'Workshop Sessions' },
	{ tag: 'Community', title: 'Networking Events' },
	{ tag: 'Competition', title: 'Speech Competitions' },
	{ tag: 'Community', title: 'Team Building' },
	{ tag: 'Learning', title: 'Leadership Training' },
];

const heroSlides = [
	{ image: HeroImage1, title: 'Powerful Speeches', subtitle: 'Members practicing impactful delivery' },
	{ image: HeroImage2, title: 'Weekly Meeting', subtitle: 'Consistent growth through stage time' },
	{ image: HeroImage3, title: 'Evaluation Session', subtitle: 'Actionable feedback for every speaker' },
	{ image: HeroImage4, title: 'Workshop Moment', subtitle: 'Hands-on communication training' },
	{ image: HeroImage5, title: 'Community Gathering', subtitle: 'Supportive and energetic atmosphere' },
	{ image: HeroImageAbout, title: 'Leadership Practice', subtitle: 'Build confidence and lead discussions' },
	{ image: HeroImage1, title: 'Contest Preparation', subtitle: 'Sharpen stories and speaking structure' },
	{ image: HeroImage3, title: 'Member Spotlight', subtitle: 'Celebrate progress and breakthroughs' },
	{ image: HeroImage4, title: 'Learning Together', subtitle: 'Grow with peers every week' },
	{ image: HeroImage5, title: 'SHIP Spirit', subtitle: 'Smart, Happy, Intellectual, Passionate' },
];

const members = [
	{ name: 'Alice Chen', role: 'Public Speaking Coach', location: 'Shenzhen, China' },
	{ name: 'David Lin', role: 'Leadership Mentor', location: 'Shenzhen, China' },
	{ name: 'Mia Zhang', role: 'Contest Organizer', location: 'Shenzhen, China' },
	{ name: 'Leo Wang', role: 'Evaluation Expert', location: 'Shenzhen, China' },
	{ name: 'Eva Liu', role: 'Club VP Education', location: 'Shenzhen, China' },
	{ name: 'Ryan Xu', role: 'Communication Trainer', location: 'Shenzhen, China' },
	{ name: 'Jasmine He', role: 'Growth Facilitator', location: 'Shenzhen, China' },
	{ name: 'Kevin Sun', role: 'Meeting Host', location: 'Shenzhen, China' },
	{ name: 'Nina Luo', role: 'Member Success Lead', location: 'Shenzhen, China' },
	{ name: 'Oscar Yu', role: 'Community Builder', location: 'Shenzhen, China' },
];
const featuredMembers = members.slice(0, 5);
const moreMembers = members.slice(5);

const faqItems = [
	{
		question: 'What makes SHIP special compared to other Toastmasters clubs?',
		answer:
			'SHIP combines structured speaking practice with a strong peer-feedback culture, so members improve quickly while staying in a supportive environment.',
	},
	{
		question: 'Do I need public speaking experience before joining?',
		answer:
			'No. Beginners are welcome. Meetings are designed for all levels, and every role has guidance so new members can participate confidently.',
	},
	{
		question: 'How often do meetings happen and how long are they?',
		answer:
			'We meet weekly on Thursday evenings. A standard session runs around 2 hours, including speeches, evaluations, and networking.',
	},
	{
		question: 'Can guests attend before becoming a member?',
		answer:
			'Yes. Guests can visit first to experience the atmosphere and decide whether SHIP is the right fit.',
	},
];

const locationName = '深圳湾科技生态园10B号楼';
const encodedLocation = encodeURIComponent(locationName);
const mapLinks = [
	{
		label: 'Google',
		url: `https://www.google.com/maps/search/?api=1&query=${encodedLocation}`,
	},
	{
		label: '百度',
		url: `https://map.baidu.com/search/${encodedLocation}`,
	},
	{
		label: '高德',
		url: `https://ditu.amap.com/search?query=${encodedLocation}`,
	},
	{
		label: '腾讯',
		url: `https://map.qq.com/search/#keyword=${encodedLocation}`,
	},
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="home-page">
			<section class="intro">
				<div class="hero-slider" aria-label="SHIP club speech and member showcase">
					<div class="hero-slides">
						{heroSlides.map((slide, index) => (
							<figure class="hero-slide" style={`--i:${index};`}>
								<img src={slide.image.src} alt={slide.title} loading={index < 2 ? 'eager' : 'lazy'} />
								<figcaption>
									<strong>{slide.title}</strong>
									<span>{slide.subtitle}</span>
								</figcaption>
							</figure>
						))}
					</div>
				</div>
				<h1>Welcome to SHIP</h1>
				<p>
					SHIP was founded in Shenzhen Science Park in 2006, now representing Smart, Happy, Intellectual, and Passionate; embodying inclusiveness, critical thinking, independent spirit, and free thought. Join us, change yourself, change the world!
				</p>
				
				<div class="meeting-info">
					<div class="info-card info-time">
						<h3>Weekly Meetings</h3>
						<p>Every Thursday at 19:30 - 21:30</p>
					</div>
					<div class="info-card info-location">
						<h3>Location</h3>
						<p>{locationName}</p>
						<div class="map-links">
							{mapLinks.map((map) => (
								<a href={map.url} target="_blank" rel="noreferrer noopener">
									{map.label}地图
								</a>
							))}
						</div>
					</div>
				</div>
				<a class="cta" href="#">
					<span class="cta-main">Join Our Next Meeting</span>
					<span class="cta-pill">Next Thursday</span>
				</a>
				<p class="caption">Experience the power of public speaking firsthand</p>
			</section>

			<section class="members">
				<h2>SHIP Club Members</h2>
				<p class="section-subtitle">Meet the people powering our speaking community</p>
				<div class="member-grid">
					{featuredMembers.map((member) => (
						<article class="member-card">
							<img src={ActivityImage.src} alt={member.name} loading="lazy" />
							<div class="member-info">
								<h3>{member.name}</h3>
								<p>{member.role}</p>
								<div class="member-location">
									<svg viewBox="0 0 24 24" aria-hidden="true">
										<path d="M12 22s7-6.2 7-12a7 7 0 1 0-14 0c0 5.8 7 12 7 12Z" fill="none" />
										<circle cx="12" cy="10" r="2.5" fill="none" />
									</svg>
									<span>{member.location}</span>
								</div>
							</div>
						</article>
					))}
				</div>
				{moreMembers.length > 0 && (
					<details class="member-more">
						<summary class="members-toggle">View all members</summary>
						<div class="member-grid member-grid-more">
							{moreMembers.map((member) => (
								<article class="member-card">
									<img src={ActivityImage.src} alt={member.name} loading="lazy" />
									<div class="member-info">
										<h3>{member.name}</h3>
										<p>{member.role}</p>
										<div class="member-location">
											<svg viewBox="0 0 24 24" aria-hidden="true">
												<path d="M12 22s7-6.2 7-12a7 7 0 1 0-14 0c0 5.8 7 12 7 12Z" fill="none" />
												<circle cx="12" cy="10" r="2.5" fill="none" />
											</svg>
											<span>{member.location}</span>
										</div>
									</div>
								</article>
							))}
						</div>
					</details>
				)}
			</section>

			<section class="activities">
				<h2>Club Activities</h2>
				<p class="section-subtitle">Explore our diverse range of activities and events</p>
				<div class="activity-grid">
					{activities.map((activity) => (
						<article class="activity-card">
							<img src={ActivityImage.src} alt={activity.title} loading="lazy" />
							<div class="activity-overlay">
								<span>{activity.tag}</span>
								<h3>{activity.title}</h3>
							</div>
						</article>
					))}
				</div>
			</section>

			<section class="faq">
				<h2>Frequently Asked Questions</h2>
				<p class="section-subtitle">Everything you need to know about SoarHigh</p>
				<div class="faq-list">
					{faqItems.map((item, index) => (
						<details class="faq-item" open={index === 0}>
							<summary>{item.question}</summary>
							<p>{item.answer}</p>
						</details>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main.home-page {
		--apple-blue: #0a84ff;
		--apple-blue-deep: #0066db;
		--apple-blue-soft: #f3f8ff;
		--apple-line: rgba(10, 132, 255, 0.14);
		--apple-text: #0f172a;
		--apple-muted: #5f6f85;
		--section-gap: 4.5rem;
		width: min(1120px, calc(100% - 2em));
		padding: 2.5rem 0 5rem;
		font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Segoe UI', sans-serif;
		color: var(--apple-text);
		background:
			radial-gradient(70% 50% at 15% 0%, rgba(10, 132, 255, 0.1), transparent 70%),
			radial-gradient(60% 50% at 90% 10%, rgba(64, 156, 255, 0.08), transparent 75%);
	}

	main.home-page p {
		font-size: 1rem;
		line-height: 1.6;
		color: var(--apple-muted);
	}

	section {
		margin-bottom: var(--section-gap);
	}

	.intro {
		max-width: 760px;
		margin: 0 auto;
		text-align: center;
	}

	:global(main.home-page .hero-slider) {
		position: relative;
		width: clamp(560px, 62vw, 860px);
		max-width: 100%;
		aspect-ratio: 16 / 9;
		height: auto;
		border-radius: 1.3rem;
		overflow: hidden;
		left: 50%;
		transform: translateX(-50%);
		margin-bottom: 1.4rem;
		border: 1px solid var(--apple-line);
		box-shadow: 0 18px 38px rgba(30, 64, 175, 0.16);
	}

	:global(main.home-page .hero-slides) {
		position: relative;
		width: 100%;
		height: 100%;
	}

	:global(main.home-page .hero-slide) {
		position: absolute;
		inset: 0;
		margin: 0;
		opacity: 0;
		animation: heroFade 50s linear infinite;
		animation-delay: calc(var(--i) * 5s);
	}

	:global(main.home-page .hero-slide:first-child) {
		opacity: 1;
	}

	:global(main.home-page .hero-slide img) {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
		filter: saturate(0.95);
	}

	:global(main.home-page .hero-slide figcaption) {
		position: absolute;
		left: 1rem;
		right: 1rem;
		bottom: 1rem;
		padding: 0.7rem 0.9rem;
		border-radius: 0.7rem;
		background: rgba(10, 40, 90, 0.56);
		backdrop-filter: blur(4px);
		color: #f9fafb;
		text-align: left;
		display: grid;
		gap: 0.2rem;
	}

	:global(main.home-page .hero-slide figcaption strong) {
		font-size: 1rem;
		line-height: 1.2;
	}

	:global(main.home-page .hero-slide figcaption span) {
		font-size: 0.82rem;
		line-height: 1.2;
		color: #d1d5db;
	}

	.intro h1,
	section h2 {
		font-size: clamp(1.85rem, 2.7vw, 2.65rem);
		font-weight: 700;
		letter-spacing: -0.02em;
		margin-bottom: 1rem;
		color: #0b1a34;
	}

	.intro > p,
	.section-subtitle {
		margin: 0 auto 1.5rem;
		max-width: 62ch;
	}

	.section-subtitle {
		text-align: center;
		margin-bottom: 2.4rem;
	}

	.meeting-info {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 1rem;
		margin: 2.6rem auto 2.4rem;
	}

	.info-card {
		border-radius: 1rem;
		padding: 1.2rem 1rem;
		background: rgba(255, 255, 255, 0.72);
		backdrop-filter: blur(10px);
		border: 1px solid var(--apple-line);
		box-shadow: 0 10px 24px rgba(15, 23, 42, 0.08);
	}

	.info-card h3 {
		font-size: 1.2rem;
		margin-bottom: 0.25rem;
	}

	.info-card p {
		margin: 0;
		line-height: 1.4;
	}

	.info-time {
		background: linear-gradient(135deg, #eff6ff, #e4f0ff);
		color: #1d4ed8;
	}

	.info-location {
		background: linear-gradient(135deg, #eff6ff, #e9f5ff);
		color: #1d4ed8;
	}

	.map-links {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.45rem;
		margin-top: 0.6rem;
	}

	.map-links a {
		background: transparent;
		color: var(--apple-blue-deep);
		text-decoration: none;
		font-size: 0.8rem;
		font-weight: 600;
		padding: 0.1rem 0.15rem;
		border-radius: 0;
		line-height: 1.2;
		border-bottom: 1px solid transparent;
	}

	.map-links a:hover {
		border-bottom-color: rgba(10, 132, 255, 0.45);
	}

	.cta {
		display: inline-flex;
		align-items: center;
		gap: 1rem;
		padding: 0.95rem 1.3rem;
		border-radius: 999px;
		background: linear-gradient(90deg, var(--apple-blue), #3a9dff);
		color: #fff;
		font-size: 1.25rem;
		font-weight: 700;
		text-decoration: none;
		box-shadow: 0 10px 20px rgba(10, 132, 255, 0.28);
	}

	.cta-main {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}

	.cta-main::before {
		content: '';
		width: 1rem;
		height: 1rem;
		border: 2px solid currentColor;
		border-radius: 0.2rem;
		box-sizing: border-box;
	}

	.cta-pill {
		font-size: 0.86rem;
		font-weight: 700;
		padding: 0.35rem 0.75rem;
		border-radius: 999px;
		background: rgba(255, 255, 255, 0.3);
	}

	.caption {
		margin-top: 0.85rem;
		font-size: 0.94rem;
		opacity: 0.8;
	}

	.members,
	.activities,
	.faq {
		text-align: center;
	}

	:global(main.home-page .member-grid) {
		display: grid;
		grid-template-columns: repeat(5, minmax(0, 1fr));
		gap: 1rem;
		text-align: left;
	}

	:global(main.home-page .member-grid-more) {
		margin-top: 1rem;
	}

	:global(main.home-page .member-card) {
		background: rgba(255, 255, 255, 0.82);
		border-radius: 1.1rem;
		padding: 1rem;
		color: var(--apple-text);
		display: flex;
		flex-direction: column;
		align-items: center;
		border: 1px solid var(--apple-line);
		box-shadow: 0 8px 24px rgba(15, 23, 42, 0.08);
	}

	:global(main.home-page .member-card img) {
		width: 96px;
		height: 96px;
		max-width: 96px;
		min-width: 96px;
		min-height: 96px;
		border-radius: 999px;
		border: 2px solid rgba(10, 132, 255, 0.32);
		object-fit: cover;
		display: block;
		margin-bottom: 0.8rem;
	}

	:global(main.home-page .member-info) {
		width: 100%;
	}

	:global(main.home-page .member-info h3) {
		font-size: 1rem;
		color: #0f172a;
		margin-bottom: 0.35rem;
	}

	:global(main.home-page .member-info p) {
		color: #5f6f85;
		font-size: 0.82rem;
		line-height: 1.45;
		margin-bottom: 0.7rem;
	}

	:global(main.home-page .member-location) {
		display: flex;
		align-items: center;
		gap: 0.35rem;
		color: #667995;
		font-size: 0.82rem;
		font-weight: 600;
	}

	:global(main.home-page .member-location svg) {
		width: 16px;
		height: 16px;
		stroke: #7b8da8;
		stroke-width: 1.8;
		fill: none;
		flex: 0 0 auto;
	}

	.member-more {
		margin-top: 1rem;
	}

	.members-toggle {
		display: inline-flex;
		align-items: center;
		gap: 0.35rem;
		padding: 0.42rem 0.82rem;
		border-radius: 999px;
		background: rgba(10, 132, 255, 0.1);
		color: var(--apple-blue-deep);
		font-size: 0.84rem;
		font-weight: 700;
		cursor: pointer;
		list-style: none;
	}

	.members-toggle::-webkit-details-marker {
		display: none;
	}

	.activity-grid {
		display: grid;
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 1.4rem;
	}

	.activity-card {
		position: relative;
		overflow: hidden;
		border-radius: 1rem;
		height: 260px;
		border: 1px solid var(--apple-line);
		box-shadow: 0 10px 24px rgba(15, 23, 42, 0.12);
	}

	.activity-card img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}

	.activity-overlay {
		position: absolute;
		inset: 0;
		background: linear-gradient(to top, rgba(7, 30, 66, 0.82), rgba(7, 30, 66, 0.14));
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		align-items: flex-start;
		padding: 1.4rem;
		color: #fff;
	}

	.activity-overlay span {
		font-size: 1.45rem;
		color: #60a5fa;
	}

	.activity-overlay h3 {
		color: #fff;
		font-size: 2.1rem;
		margin: 0.15rem 0 0;
	}

	.faq-list {
		max-width: 760px;
		margin: 0 auto;
		display: grid;
		gap: 0.7rem;
	}

	.faq-item {
		background: rgba(255, 255, 255, 0.84);
		border-radius: 1rem;
		padding: 0.25rem 1.2rem;
		box-shadow: 0 8px 20px rgba(15, 23, 42, 0.08);
		border: 1px solid var(--apple-line);
	}

	.faq-item summary {
		list-style: none;
		cursor: pointer;
		font-size: 1rem;
		font-weight: 600;
		color: #13284b;
		padding: 0.8rem 0;
		position: relative;
		padding-right: 1.8rem;
	}

	.faq-item summary::-webkit-details-marker {
		display: none;
	}

	.faq-item summary::after {
		content: '+';
		position: absolute;
		right: 0.2rem;
		top: 50%;
		transform: translateY(-50%);
		color: #5f6f85;
		font-size: 1.2rem;
		font-weight: 700;
	}

	.faq-item[open] summary::after {
		content: '-';
	}

	.faq-item p {
		font-size: 0.94rem;
		margin: 0 0 0.9rem;
		padding-top: 0.1rem;
		color: var(--apple-muted);
	}

	.faq-item:last-child {
		margin-bottom: 0.1rem;
	}

	.faq-item a {
		color: var(--apple-blue-deep);
		cursor: pointer;
	}

	@media (max-width: 960px) {
		:global(main.home-page .member-grid) {
			grid-template-columns: repeat(3, minmax(0, 1fr));
		}

		.activity-grid {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}
	}

	@media (max-width: 680px) {
		section {
			margin-bottom: 3.25rem;
		}

		.meeting-info,
		.activity-grid {
			grid-template-columns: 1fr;
		}

		:global(main.home-page .member-grid) {
			grid-template-columns: 1fr;
		}

		.intro > p,
		.section-subtitle,
		.faq-item {
			font-size: 0.92rem;
		}

		.cta {
			font-size: 1rem;
		}

		:global(main.home-page .hero-slider) {
			width: 100%;
			max-width: 100%;
			left: 0;
			transform: none;
		}
	}

	@keyframes heroFade {
		0% {
			opacity: 0;
			transform: scale(1.02);
		}
		2%,
		8% {
			opacity: 1;
			transform: scale(1);
		}
		10%,
		100% {
			opacity: 0;
			transform: scale(1.03);
		}
	}
</style>
